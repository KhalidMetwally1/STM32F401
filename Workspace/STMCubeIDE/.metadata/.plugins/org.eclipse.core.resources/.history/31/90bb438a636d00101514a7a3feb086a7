#ifndef SYSTICK_PRIVATE_H_
#define SYSTICK_PRIVATE_H_
/*==============================================================================================================*/

#define SYSTICK_BASE_ADDRESS (0xE000E010)
/*==============================================================================================================*/

typedef struct
{
	u32 CTRL;
	u32	LOAD;
	u32 VAL;
	u32 CALIB;
}S_SYSTICK;
/*==============================================================================================================*/

#define SYSTICK ((volatile S_SYSTICK*)SYSTICK_BASE_ADDRESS)
/*==============================================================================================================*/

/* DETERMINE BUS */
#define AHB_Diveded_By_8	0
#define AHB_CLOCK_SOURCE	1
/*==============================================================================================================*/
#endif /* SYSTICK_PRIVATE_H_ */
